#define SET_REG(REG, SELECT, VAL) { ((REG)=((REG)&(~(SELECT))) | (VAL)); };


//These functions inside the asm file
extern void GPIO_init();
extern void Delay1sWith4MHz();
extern void LEDON();
extern void LEDOFF();
